<?php



require_once('cpn_orm.php.inc');



class			cpn_custom
	extends		cpn_orm {
	use			cpnt_orm;




	////////////////////////////////////////////////////////////////////////////
	//CONSTRUCTOR
	////////////////////////////////////////////////////////////////////////////
	public function __construct(pudl $pudl, $file, $item=false, $fetch=false) {
		parent::__construct($pudl, $item, $fetch);
		$this->file = $file;
	}




	////////////////////////////////////////////////////////////////////////////
	//URL TO THIS OBJECT
	////////////////////////////////////////////////////////////////////////////
	public function url() {}




	////////////////////////////////////////////////////////////////////////////
	//RENDER
	////////////////////////////////////////////////////////////////////////////
	public function render($af) {
		$af	->load($this->file)
			->field('item', $this)
			->render();
	}




	////////////////////////////////////////////////////////////////////////////
	//LOCAL VARIABLES
	////////////////////////////////////////////////////////////////////////////
	private $file = '';




	////////////////////////////////////////////////////////////////////////////
	//LATE STATIC BINDING VARIABLES FROM PUDL ORM
	////////////////////////////////////////////////////////////////////////////
	const	column		= '';
	const	table		= '';

}
