<div class="cpn-default cpn-discover">
	<a	href="[afurl.base]/[item.url]"
		style="width:[item.width;ifempty=300]px; background-color:#[item.file_average;ifempty=fff]"
		class="[item.class;magnet=#]">

		<figure style="color:#[item.file_average;ifempty=fff]">
			<img src="[item.img;noerr;ifempty='[afurl.static]/thumb2/gallery.svg']"/>
			<figcaption>
				<div class="cpn-discover-text">
					<span>[item.user_name;noerr;magnet=span]</span>
					<span>[item.link_name;noerr;magnet=span]</span>
					<span>[item.name;block=a]</span>
				</div>
			</figcaption>
		</figure>
	</a>

	<figure class="prometheus-insert"></figure>
	<figure class="prometheus-insert"></figure>
	<figure class="prometheus-insert"></figure>
	<figure class="prometheus-insert"></figure>
	<figure class="prometheus-insert"></figure>
</div>
