<div class="cpn-comment" data-id="[posts_sub1.comment_id;block=div]">
	<a href="[afurl.base]/[posts_sub1.user_url;ifempty='[posts_sub1.commenter_id]']">
		<img class="cpn-comment-img" src="[posts_sub1.img;ifempty='[afurl.static]/thumb2/profile.svg']" alt="[posts_sub1.user_name]" />
	</a>

	<div class="cpn-comment-text">
		<a class="cpn-username" href="[afurl.base]/[posts_sub1.user_url;ifempty='[posts_sub1.commenter_id]']">[posts_sub1.user_name]</a>
		[posts_sub1.comment_text]
	</div>

	<div class="cpn-comment-status">[posts_sub1.timesince]</div>
	<div class="clear"></div>
</div>
