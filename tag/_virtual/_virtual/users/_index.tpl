<article class="cpn-default">
	<h1 class="cpn-header">Users</h1>

	<div class="cpn-default">

		<ul class="cpn-account-list">
			<li>
				<a class="cpn-account-name" href="[afurl.base]/[account.user_url;ifempty='[account.user_id]';block=li]" data-id="[account.user_id]">
					<img src="[account.img;ifempty='[afurl.static]/thumb2/profile.svg']" alt="[account.user_name]" />
					[account.user_name]
					<span class="cpn-account-subtext">[account.user_tagline]</span>
				</a>
			</li>
		</ul>

	</div>
</article>
