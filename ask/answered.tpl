<article class="cpn-default">
	<h1 class="cpn-header">This Question Has Been Answered</h1>
	<div class="cpn-default larger">
		<div style="width:49%;float:left">
			<b><a href="[afurl.base]/[sender.user_url;ifempty='[sender.user_id]']">[sender.user_name]</a> asked:</b><br />
			[ask.question_text]
		</div>

		<div style="width:49%;float:right" id="cpn-answer">
			<b><a href="[afurl.base]/[receiver.user_url;ifempty='[receiver.user_id]']">[receiver.user_name]</a> answered:</b><br />
			[ask.answer_text]
		</div>

		<div class="clear"></div>
	</div>
</article>
